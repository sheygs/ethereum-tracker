{
  "name": "ethereum-tracker",
  "description": "Track and analyze Ethereum blockchain transactions in real-time.",
  "version": "1.0.0",
  "main": "./build/index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "nodemon --watch \"./src/**/*.ts\" --exec \"ts-node\" ./src/index.ts",
    "start:dev": "nodemon --exec \"yarn clean && yarn build && yarn start\" --watch src --ext ts",
    "clean": "rimraf build",
    "build": "tsc",
    "build:image": "docker build -t ethereum-tracker .",
    "run:image": "docker run -p 3000:3000 ethereum-tracker",
    "docker-compose": "docker-compose up -d postgres api",
    "docker:logs": "docker-compose logs",
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:c-migration": "yarn typeorm -- migration:create src/database/migrations/$npm_config_name",
    "typeorm:create-migration": "yarn typeorm -- migration:create src/database/migrations/InitialMigration",
    "typeorm:run-migrations": "yarn typeorm migration:run -- -d ./src/database/data-source.ts",
    "typeorm:revert-migrations": "yarn typeorm migration:revert -- -d ./src/database/data-source.ts"
  },
  "keywords": [
    "api",
    "ethereum",
    "transactions",
    "tracker"
  ],
  "author": "Olusegun Ekoh (sheygs)",
  "repository": "https://github.com/sheygs/ethereum-tracker.git",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "async-retry": "^1.3.3",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@jest/globals": "^29.7.0",
    "@types/async-retry": "^1.4.8",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "globals": "^15.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
